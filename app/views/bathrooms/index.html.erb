<div class="page-header">
  <h1>
    Bathrooms
    <a href="/bathrooms/new" class="btn btn-lg btn-success">New Bathroom</a>
  </h1>
</div>


<div class="row m-b-2">
  <div class="col-md-12">
    <div>
      <div id="location_map" style="height: 480px;"></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Address</th>
        <th>Neiborhood</th>
        <th>Notes</th>
        <th>Comment</th>
        <th>Public or not</th>
        <th>Rating easy to find</th>
        <th>Actions</th>
      </tr>

      <% @bathrooms.each do |bathroom| %>
      <tr>
        <td><%= bathroom.address %></td>
        <td><%= bathroom.neiborhood.name %></td>
        <td><%= bathroom.notes %></td>
        <td><%= bathroom.comment_id %></td>
        <td><%= bathroom.public_or_not %></td>
        <td><%= bathroom.rating_easy_to_find %></td>
        <td>
          <a href="/bathrooms/<%= bathroom.id %>" class="btn btn-primary">Show</a>
          <a href="/bathrooms/<%= bathroom.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_bathroom/<%= bathroom.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @bathrooms, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.24&key=AIzaSyCOTPWiuvyyo6sKoIBzKA4-1ol-vTOIOlM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'location_map'}}, function(){
    markers = handler.addMarkers(<%= raw @location_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>